<!DOCTYPE html>
<html>
  <head>
    <title>STAY IN TOUCH</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar blur navbar-light align-items-center p-2 pr-3 pl-3">
      <%= link_to 'Stay in touch', root_path, class: 'navbar-brand d-none d-md-block' %>
      <ul class="navbar-nav d-block flex-grow-1 d-flex flex-row ">
        <li class="d-inline nav-item">
          <%= link_to 'Timeline', posts_path, class: 'nav-link mr-3' %>
        </li>
        <li class="d-inline nav-item">
          <%= link_to 'All users', users_path, class: 'nav-link' %>
        </li>
      </ul>
      <% if current_user %>
        <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: "btn btn-outline-primary p-0 pl-2 pr-2" %>
      <% else %>
        <%= link_to 'Sign in', user_session_path, class: "btn btn-outline-primary p-0 pl-2 pr-2" %>
      <% end %>
    </nav>

    <div class='container-fluid'>
      <% if notice.present? %>
        <div class="notice">
          <p> <%= notice %> </p>
        </div>
      <% end %>

      <% if alert.present? %>
        <div class="alert">
          <p> <%= alert %> </p>
        </div>
      <% end %>

      <main class="main">
        <%= yield %>
      </main>
    </div>
 </body>
</html>
