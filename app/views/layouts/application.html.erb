<!DOCTYPE html>
<html>
  <head>
    <title>STAY IN TOUCH</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="bg-image">
    <nav class="navbar blur navbar-light align-items-center p-2 pr-3 pl-3">
      <%= link_to 'Stay in touch', root_path, class: 'navbar-brand d-none d-md-block' %>
      <ul class="navbar-nav d-block flex-grow-1 d-flex flex-row ">
        <li class="d-inline nav-item">
          <%= link_to 'Timeline', posts_path, class: 'nav-link mr-3' %>
        </li>
        <li class="d-inline nav-item">
          <%= link_to 'All users', users_path, class: 'nav-link' %>
        </li>
      </ul>

      <% if current_user %>
        <div class="d-flex flex-row align-items-baseline p-0 m-0">
          <i class="glyphicon glyphicon-user small"></i>
          <%= link_to current_user.name, user_path(current_user), class: 'nav-link p-2 mr-3' %>
        </div>

        <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: "btn btn-outline-primary p-0 pl-2 pr-2" %>
      <% else %>
        <%= link_to 'Sign in', user_session_path, class: "btn btn-outline-primary p-0 pl-2 pr-2" %>
      <% end %>
    </nav>

    <% if notice.present? %>
      <div class="notice position-absolute p-3 m-auto font-weight-bold">
        <p> <%= notice %> </p>
      </div>
    <% end %>

    <% if alert.present? %>
      <div class="alert position-absolute p-3 m-auto font-weight-bold">
        <p> <%= alert %> </p>
      </div>
    <% end %>

    <div class='container-fluid'>
      <main class="main">
        <%= yield %>
      </main>
    </div>
  </body>
</html>
