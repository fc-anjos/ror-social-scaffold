<li class="post mb-4">
  <div>
    <div class='post-attribution' >
      <%= link_to post.user.name, user_path(post.user), class: 'post-author' %>
    </div>
    <div class='post-liking'>
      <span class='post-date'> <%= post.created_at.strftime("%Y/%m/%d") %> </span>
      <span class='post-date'> Likes <%= post.likes.count %> </span>
      <span class='post-date'> Comments <%= post.comments.count %></span>
      <%= like_or_dislike_btn(post) %>
    </div>
  </div>
  <p class="post-content">
    <%= post.content %>
  </p>

  <div class='post-comments-section'>
    <% post.comments.each do |comment| %>
      <div class="post-comments">
        <p>
          <b><%= comment.user.name %>:</b> <%= comment.content %>
        </p>
        <span> <%= comment.created_at.strftime("%Y/%m/%d") %> </span>
      </div>
    <% end %>

    <%= form_for(post.comments.new, url: post_comments_path(post)) do |form| %>
      <div class="d-flex flex-row">
        <%= form.text_field :content, id: :comment_content, placeholder: 'Add new Comment', class: "form-control mb-3 flex-grow-1 mr-2", style: 'height: 48px' %>
        <%= form.submit 'Comment', class: 'btn btn-primary h-100 border-0', style: 'height: 48px'  %>
      </div>
    <% end %>
  </div>
</li>
